<div class="container my-5">
  <div class="jumbotron">

    <h1>REGISTRO</h1>
    <br />

    <div class="bg-secondary">
      <div class="p-2">
        <form
          class="form"
          action="/registro"
          method="post"
          role="form"
          autocomplete="off"
        >
          <div class="form-group">
            <label for="nombre">Nombre</label>
            <input
              id="username"
              name="username"
              placeholder="Ingrese su nombre"
              class="form-control"
              type="text"
              required
            />
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input
              id="email"
              name="email"
              placeholder="Ingrese su email"
              class="form-control"
              type="text"
              required
            />
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input
              id="password"
              name="password"
              placeholder="Ingrese su password"
              class="form-control"
              type="password"
              required
            />
          </div>

          <div class="form-group">
            <input
              class="btn btn-primary mt-5"
              type="submit"
              value="Registro"
            />
          </div>
        </form>

      </div>

    </div>
    <hr />

    <div class="text-left mt-5">
      <button class="btn btn-success my-3" onclick="location.href = '/login'">Ir
        a Login</button>
    </div>

  </div>
</div>